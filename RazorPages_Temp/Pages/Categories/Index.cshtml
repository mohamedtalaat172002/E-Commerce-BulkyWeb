@page
@model RazorPages_Temp.Pages.Category.IndexModel


<div class="container">
    <div class="row pt-4 pb-15">
        <div class="col-6">
            <h2 class="text-primary">
                Categories
            </h2>
        </div>
        <div class="col-6 text-end p-2">
            <a asp-page="Categories/Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> Add New Category
            </a>

        </div>

    </div>


    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th> Name </th>
                <th> Dispaly Order </th>
                <th> Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.categories.OrderBy(o => o.DispalyOrder))
            {
                <tr class="table-primary">
                    <td> @category.Name</td>
                    <td>@category.DispalyOrder </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="Categories/"Edit" asp-route-id="@category.CategoryId" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>

                            <a asp-page"Categories/Delete" asp-route-id="@category.CategoryId" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>

                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>